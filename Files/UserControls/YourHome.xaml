<Page
    x:Class="Files.YourHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:list="using:Locations"
    xmlns:local="using:Files"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <Page.Resources>
        <Style
            x:Key="AdaptiveGridViewItemContainerStyle2"
            BasedOn="{StaticResource GridViewItemExpanded}"
            TargetType="GridViewItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>
        <Style
            x:Key="ListViewItemContainerStyle1"
            BasedOn="{StaticResource ListViewItemRevealStyle}"
            TargetType="ListViewItem">
            <Setter Property="Padding" Value="12,0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
        </Style>
    </Page.Resources>
    <Grid Margin="14,14,14,0" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <controls:AdaptiveGridView
            x:Name="CardsList"
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            DesiredWidth="100"
            IsItemClickEnabled="True"
            ItemContainerStyle="{StaticResource AdaptiveGridViewItemContainerStyle2}"
            ItemHeight="90"
            ItemsSource="{x:Bind list:ItemLoader.itemsAdded}"
            OneRowModeEnabled="True"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            SelectionMode="None"
            StretchContentForSingleRow="True">
            <controls:AdaptiveGridView.ItemTemplate>
                <DataTemplate x:DataType="list:FavoriteLocationItem">
                    <Grid>
                        <Grid>
                            <Button
                                Padding="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="{ThemeResource YourHomeCardBackgroundColor}"
                                BorderThickness="1"
                                Click="Button_Click"
                                CornerRadius="4"
                                Style="{StaticResource ButtonRevealStyle}"
                                Tag="{x:Bind Tag}">

                                <Grid
                                    Margin="8,14"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    RowSpacing="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <FontIcon
                                        Grid.Row="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        FontSize="28"
                                        FontFamily="{StaticResource FluentUIGlyphs}"
                                        Glyph="{x:Bind Icon}" />
                                    <TextBlock
                                        x:Name="ItemLocationName"
                                        Grid.Row="1"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        HorizontalTextAlignment="Center"
                                        Text="{x:Bind Text}"
                                        TextWrapping="WrapWholeWords" />
                                </Grid>
                            </Button>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </controls:AdaptiveGridView.ItemTemplate>
        </controls:AdaptiveGridView>

        <Grid
            x:Name="RecentsListGrid"
            Grid.Row="1"
            Grid.Column="0">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    x:Uid="RecentItems"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    FontFamily="Segoe UI"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Recent files" />
                <TextBlock
                    x:Uid="RecentItemDescription"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Stretch"
                    FontSize="14"
                    Text="Files you've accessed before will show up here"
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords"
                    Visibility="{x:Bind Empty.Visibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <ListView
                    x:Name="RecentsView"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsItemClickEnabled="True"
                    IsRightTapEnabled="True"
                    ItemClick="RecentsView_ItemClick"
                    ItemContainerStyle="{StaticResource ListViewItemContainerStyle1}"
                    ItemsSource="{x:Bind recentItemsCollection}"
                    SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:RecentItem">
                            <Grid
                                Padding="2.5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="Transparent"
                                ColumnSpacing="14"
                                ToolTipService.ToolTip="{x:Bind RecentPath}">
                                <Grid.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem
                                            x:Name="mfi_RemoveOneItem"
                                            x:Uid="RecentItemRemove"
                                            Click="RemoveOneFrequentItem"
                                            Icon="Remove"
                                            Text="Remove this item" />
                                        <MenuFlyoutItem
                                            x:Uid="RecentItemClearAll"
                                            Click="MenuFlyoutItem_Click"
                                            Icon="Delete"
                                            Text="Clear all items" />
                                        <MenuFlyoutItem
                                            x:Uid="RecentItemOpenFileLocation"
                                            Click="OpenFileLocation_Click"
                                            Text="Open file location"
                                            Visibility="{x:Bind IsFile}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="&#xEA5A;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Grid.ContextFlyout>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid
                                    Grid.Column="0"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Stretch">
                                    <FontIcon
                                        FontFamily="{StaticResource FluentUIGlyphs}"
                                        FontSize="24"
                                        Foreground="#ffe793"
                                        Glyph="&#xEA55;"
                                        Visibility="{x:Bind FolderImg}" />
                                    <FontIcon
                                        FontFamily="{StaticResource FluentUIGlyphs}"
                                        FontSize="24"
                                        Glyph="&#xEA00;"
                                        Visibility="{x:Bind EmptyImgVis}" />
                                    <Image
                                        Width="24"
                                        Height="24"
                                        Source="{x:Bind FileImg}"
                                        Stretch="UniformToFill"
                                        Visibility="{x:Bind FileIconVis}" />
                                </Grid>
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind Name}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                                <TextBlock
                                    Grid.Column="2"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Foreground="DimGray"
                                    Text="{x:Bind RecentPath}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Page>