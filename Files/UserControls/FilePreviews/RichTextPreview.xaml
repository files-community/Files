<UserControl
    x:Class="Files.UserControls.FilePreviews.RichTextPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.UserControls.FilePreviews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <RichEditBox
            x:Name="TextPreviewControl"
            IsReadOnly="True"
            Loaded="TextPreviewControl_Loaded">
            <RichEditBox.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Default">
                            <SolidColorBrush x:Key="TextControlBackground" Color="Transparent" />
                            <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
                            <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent" />
                            <SolidColorBrush x:Key="TextControlBorderBrush" Color="Transparent" />
                            <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent" />
                            <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="Transparent" />
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </RichEditBox.Resources>
        </RichEditBox>
    </Grid>
</UserControl>