                                    Margin="0,0,0,2"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Text="{Binding Title}" />
                                <FontIcon FontSize="10" Glyph="&#xE76C;" />
                            </StackPanel>
                        </Grid>
