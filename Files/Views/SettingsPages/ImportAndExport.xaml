<Page
    x:Class="Files.SettingsPages.ImportAndExport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.UserControls.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settingsviewmodels="using:Files.ViewModels.SettingsViewModels"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/RightAlignedToggleSwitchStyle.xaml" />
    </Page.Resources>
    <Page.DataContext>
        <settingsviewmodels:ImportAndExportViewModel x:Name="viewModel" />
    </Page.DataContext>

    <Grid>
        <StackPanel
            Margin="12,12,8,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Spacing="4">
            <StackPanel.ChildrenTransitions>
                <TransitionCollection>
                    <ReorderThemeTransition />
                </TransitionCollection>
            </StackPanel.ChildrenTransitions>

            <TextBlock
                x:Uid="SettingsImportExportTitle"
                Padding="0,0,0,12"
                FontSize="20"
                FontWeight="Medium"
                Text="Import/Export" />

            <local:SettingsBlockControl 
                    x:Uid="SettingsImport"
                    Title="Import RoamingSettings settings on Files."
                    HorizontalAlignment="Stretch">
                <local:SettingsBlockControl.Icon>
                    <FontIcon Glyph="&#xE14E;" />
                </local:SettingsBlockControl.Icon>
                <Button x:Uid="Import"
                        Name="Import"
                        Command="{Binding ImportCommand}"
                        Content="Import Settings"/>
            </local:SettingsBlockControl>            
            <local:SettingsBlockControl 
                    x:Uid="SettingsExport"
                    Title="Export Files settings."
                    HorizontalAlignment="Stretch">
                <local:SettingsBlockControl.Icon>
                    <FontIcon Glyph="&#xE14F;" />
                </local:SettingsBlockControl.Icon>
                <Button x:Uid="Export"
                        Name="Export"
                        Command="{Binding ExportCommand}"
                        Content="Export Settings"/>
            </local:SettingsBlockControl>            
        </StackPanel>
    </Grid>
</Page>