<Page
    x:Class="Files.SettingsPages.FilesAndFolders"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files"
    xmlns:ivb="using:Files.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <ivb:InverseBoolConverter x:Key="InverseBoolConverterKey" />
    </Page.Resources>
    <Grid>

        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel
                Margin="12,12,8,8"
                Orientation="Vertical"
                Spacing="14">
                <StackPanel.ChildrenTransitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </StackPanel.ChildrenTransitions>

                <TextBlock
                    x:Uid="SettingsFilesAndFoldersTitle"
                    FontSize="22"
                    FontWeight="Medium"
                    Text="Files and Folders" />

                <StackPanel Spacing="10">
                    <TextBlock
                        x:Uid="SettingsFilesAndFoldersShowHiddenFiles"
                        FontSize="17"
                        Text="Show hidden files, folders, and drives" />
                    <ToggleSwitch IsEnabled="False" />
                </StackPanel>

                <StackPanel Spacing="10">
                    <TextBlock
                        x:Uid="SettingsFilesAndFoldersShowFileExtensions"
                        FontSize="17"
                        Text="Show extensions for known file types" />
                    <ToggleSwitch x:Name="FileExtensionsToggle" IsOn="{x:Bind AppSettings.ShowFileExtensions, Mode=TwoWay}" />
                </StackPanel>

                <StackPanel Spacing="10">
                    <TextBlock
                        x:Uid="DotFileNamesToggle"
                        FontSize="17"
                        Text="Show Dotfile Names" />
                    <ToggleSwitch x:Name="DotFileNamesToggle" 
                        IsOn="{x:Bind AppSettings.DotFileNames, Mode=TwoWay}"
                        Visibility="{Binding Path=IsOn, ElementName=FileExtensionsToggle, Mode=TwoWay, Converter={StaticResource InverseBoolConverterKey}}"
                        IsEnabled="{Binding Path=IsOn, ElementName=FileExtensionsToggle, Mode=TwoWay, Converter={StaticResource InverseBoolConverterKey}}"
                                />
                    <TextBlock
                        x:Uid="DotFileDisabledText"
                        FontSize="15"
                        Text='Disabled while "Show extensions for known file types" is enabled.'
                        Foreground="#FFEE8506" Visibility="{Binding Path=IsOn, ElementName=FileExtensionsToggle}" />
                </StackPanel>

                <StackPanel Spacing="10">
                    <TextBlock
                        x:Uid="SettingsFilesAndFoldersShowDriveLetters"
                        FontSize="17"
                        Text="Show drive letters" />
                    <ToggleSwitch
                        IsEnabled="False"
                        OffContent=""
                        OnContent="" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>