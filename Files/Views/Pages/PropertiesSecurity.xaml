<local:PropertiesTab
    x:Class="Files.Views.PropertiesSecurity"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.ViewModels.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:perm="using:Files.Filesystem.Permissions"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:usercontrols="using:Files.UserControls"
    d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:Height="1000"
    d:Width="700"
    Loaded="Properties_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ResourceDictionaries/PropertiesStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <StackPanel Style="{StaticResource PropertiesTab}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                x:Uid="SecurityUsersGroupLabel"
                Grid.Column="0"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Style="{StaticResource PropertyName}"
                Text="Group or user names" />

            <CommandBar
                Grid.Column="1"
                IsDynamicOverflowEnabled="False"
                OverflowButtonVisibility="Collapsed">
                <CommandBar.PrimaryCommands>
                    <AppBarButton Icon="Edit" />
                    <AppBarButton Icon="Add" />
                    <AppBarButton Icon="Remove" />
                </CommandBar.PrimaryCommands>
            </CommandBar>
        </Grid>

        <ListView
            x:Name="ListView"
            MaxHeight="134"
            x:Load="{x:Bind ViewModel.FilePermissions.CanReadFilePermissions, Mode=OneWay}"
            Background="{ThemeResource SolidBackgroundAcrylic}"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="4"
            ItemsSource="{x:Bind ViewModel.FilePermissions.RulesForUsers, Mode=OneWay}"
            SelectedItem="{x:Bind SelectedAccessRule, Mode=TwoWay}"
            SelectionMode="Single">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="MinHeight" Value="44" />
                    <Setter Property="Height" Value="44" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="perm:RulesForUser">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            x:Name="FontIcon"
                            HorizontalAlignment="Left"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Glyph="{x:Bind UserGroup.Glyph}" />

                        <TextBlock Grid.Column="1">
                            <Run Text="{x:Bind UserGroup.DisplayName}" />
                            <Span FontWeight="Light">&#160;(</Span>
                            <Run FontWeight="Light" Text="{x:Bind UserGroup.FullNameOrSid}" />
                            <Span FontWeight="Light">)</Span>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid
            x:Name="CheckBoxGrid"
            Margin="0,12,0,0"
            x:Load="{x:Bind ViewModel.FilePermissions.CanReadFilePermissions, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Style="{StaticResource PropertyName}"
                TextTrimming="CharacterEllipsis">
                <Run x:Uid="SecurityPermissionsLabel" Text="Permissions for" />
                <Run Text="{x:Bind SelectedAccessRule.UserGroup.DisplayName, Mode=OneWay}" />
            </TextBlock>

            <TextBlock
                x:Uid="SecurityAllowLabel"
                Grid.Row="0"
                Grid.Column="1"
                Margin="24,0,24,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource PropertyName}"
                Text="Allow" />

            <TextBlock
                x:Uid="SecurityDenyLabel"
                Grid.Row="0"
                Grid.Column="2"
                Margin="24,0,24,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource PropertyName}"
                Text="Deny" />

            <TextBlock
                x:Uid="SecurityFullControlLabel"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Full control" />

            <CheckBox
                Grid.Row="1"
                Grid.Column="1"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.GrantsFullControl, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.GrantsInheritedFullControl, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />

            <CheckBox
                Grid.Row="1"
                Grid.Column="2"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.DeniesFullControl, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.DeniesInheritedFullControl, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />

            <TextBlock
                x:Uid="SecurityModifyLabel"
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Modify" />

            <CheckBox
                Grid.Row="2"
                Grid.Column="1"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.GrantsModify, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.GrantsInheritedModify, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />

            <CheckBox
                Grid.Row="2"
                Grid.Column="2"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.DeniesModify, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.DeniesInheritedModify, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />

            <TextBlock
                x:Uid="SecurityReadAndExecuteLabel"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Read and execute" />

            <CheckBox
                Grid.Row="3"
                Grid.Column="1"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.GrantsReadAndExecute, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.GrantsInheritedReadAndExecute, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />

            <CheckBox
                Grid.Row="3"
                Grid.Column="2"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.DeniesReadAndExecute, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.DeniesInheritedReadAndExecute, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />

            <TextBlock
                x:Uid="SecurityListDirectoryLabel"
                Grid.Row="4"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="List directory contents"
                Visibility="{x:Bind ViewModel.IsFolder, Mode=OneWay}" />

            <CheckBox
                Grid.Row="4"
                Grid.Column="1"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.GrantsListDirectory, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.GrantsInheritedListDirectory, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsFolder, Mode=OneWay}" />

            <CheckBox
                Grid.Row="4"
                Grid.Column="2"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.DeniesListDirectory, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.DeniesInheritedListDirectory, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsFolder, Mode=OneWay}" />

            <TextBlock
                x:Uid="SecurityReadLabel"
                Grid.Row="5"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Read" />

            <CheckBox
                Grid.Row="5"
                Grid.Column="1"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.GrantsRead, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.GrantsInheritedRead, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />

            <CheckBox
                Grid.Row="5"
                Grid.Column="2"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.DeniesRead, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.DeniesInheritedRead, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />

            <TextBlock
                x:Uid="SecurityWriteLabel"
                Grid.Row="6"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Write" />

            <CheckBox
                Grid.Row="6"
                Grid.Column="1"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.GrantsWrite, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.GrantsInheritedWrite, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />

            <CheckBox
                Grid.Row="6"
                Grid.Column="2"
                MinWidth="0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsChecked="{x:Bind SelectedAccessRule.DeniesWrite, Mode=TwoWay}"
                IsEnabled="{x:Bind SelectedAccessRule.DeniesInheritedWrite, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}" />
        </Grid>

        <TextBlock
            x:Name="CannotReadPropsText"
            x:Uid="SecurityCannotReadProperties"
            HorizontalAlignment="Left"
            x:Load="{x:Bind ViewModel.FilePermissions.CanReadFilePermissions, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
            Text="You do not have permissions to view the security properties of this object. Click &quot;Advanced permissions&quot; to proceed."
            TextWrapping="WrapWholeWords" />

        <Button Margin="0,12,0,0" HorizontalAlignment="Left">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <FontIcon
                    Margin="0,0,12,0"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Glyph="&#xE74C;" />
                <TextBlock x:Uid="SecurityAdvancedPermissions" Text="Advanced permissions" />
            </StackPanel>
        </Button>
    </StackPanel>
</local:PropertiesTab>
