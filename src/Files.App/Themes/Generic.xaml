<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Files.App">

    <Style TargetType="local2:SettingsCard" xmlns:local2="using:Files.App.UserControls.Settings">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:SettingsCard">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local2:SettingsExpander" xmlns:local2="using:Files.App.UserControls.Settings">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:SettingsExpander">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local2:A" xmlns:local2="using:Files.App.UserControls.Settings">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:A">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
