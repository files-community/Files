<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:labs="using:CommunityToolkit.Labs.WinUI">

	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Dark">
			<StaticResource x:Key="ShimmerBackground" ResourceKey="ControlAltFillColorTertiaryBrush" />
		</ResourceDictionary>
		<ResourceDictionary x:Key="Light">
			<StaticResource x:Key="ShimmerBackground" ResourceKey="ControlAltFillColorTertiaryBrush" />
		</ResourceDictionary>
		<ResourceDictionary x:Key="HighContrast">
			<StaticResource x:Key="ShimmerBackground" ResourceKey="SystemColorWindowColor" />
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>

	<Style TargetType="labs:Shimmer">
		<Setter Property="Background" Value="{ThemeResource ShimmerBackground}" />
		<Setter Property="CornerRadius" Value="4" />
		<Setter Property="MinWidth" Value="40" />
		<Setter Property="MinHeight" Value="8" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="labs:Shimmer">
					<Border
						x:Name="Shape"
						Background="{TemplateBinding Background}"
						CornerRadius="{TemplateBinding CornerRadius}" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
