<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Files.App.UserControls">

	<ResourceDictionary.ThemeDictionaries>

		<ResourceDictionary x:Key="Default">
			<Color x:Key="ThemedIconBaseColor">#DBF0F0F0</Color>
			<Color x:Key="ThemedIconAltColor">#66161616</Color>

			<StaticResource x:Key="ThemedIconBaseBrush" ResourceKey="ThemedIconBaseColor" />
			<StaticResource x:Key="ThemedIconAltBrush" ResourceKey="ThemedIconAltColor" />
			<StaticResource x:Key="ThemedIconAccentBrush" ResourceKey="AccentFillColorDefaultBrush" />
			<StaticResource x:Key="ThemedIconAccentContrastBrush" ResourceKey="TextOnAccentFillColorPrimaryBrush" />
			<StaticResource x:Key="ThemedIconDisabledBrush" ResourceKey="TextFillColorDisabledBrush" />
			<StaticResource x:Key="ThemedIconHighContrastBrush" ResourceKey="TextFillColorPrimary" />

			<StaticResource x:Key="ThemedIconCriticalBrush" ResourceKey="SystemFillColorCritical" />
			<StaticResource x:Key="ThemedIconCautionBrush" ResourceKey="SystemFillColorCaution" />
			<StaticResource x:Key="ThemedIconSuccessBrush" ResourceKey="SystemFillColorSuccess" />
			<StaticResource x:Key="ThemedIconNeutralBrush" ResourceKey="SystemFillColorSolidNeutral" />

			<StaticResource x:Key="ThemedIconCriticalBackgroundBrush" ResourceKey="SystemFillColorCriticalBackgroundBrush" />
			<StaticResource x:Key="ThemedIconCautionBackgroundBrush" ResourceKey="SystemFillColorCautionBackgroundBrush" />
			<StaticResource x:Key="ThemedIconSuccessBackgroundBrush" ResourceKey="SystemFillColorSuccessBackgroundBrush" />
			<StaticResource x:Key="ThemedIconNeutralBackgroundBrush" ResourceKey="SystemFillColorNeutralBackgroundBrush" />
		</ResourceDictionary>

		<ResourceDictionary x:Key="Light">
			<Color x:Key="ThemedIconBaseColor">#DB161616</Color>
			<Color x:Key="ThemedIconAltColor">#66F0F0F0</Color>

			<StaticResource x:Key="ThemedIconBaseBrush" ResourceKey="ThemedIconBaseColor" />
			<StaticResource x:Key="ThemedIconAltBrush" ResourceKey="ThemedIconAltColor" />
			<StaticResource x:Key="ThemedIconAccentBrush" ResourceKey="AccentFillColorDefaultBrush" />
			<StaticResource x:Key="ThemedIconAccentContrastBrush" ResourceKey="TextOnAccentFillColorPrimaryBrush" />
			<StaticResource x:Key="ThemedIconDisabledBrush" ResourceKey="TextFillColorDisabledBrush" />
			<StaticResource x:Key="ThemedIconHighContrastBrush" ResourceKey="TextFillColorPrimary" />

			<StaticResource x:Key="ThemedIconCriticalBrush" ResourceKey="SystemFillColorCritical" />
			<StaticResource x:Key="ThemedIconCautionBrush" ResourceKey="SystemFillColorCaution" />
			<StaticResource x:Key="ThemedIconSuccessBrush" ResourceKey="SystemFillColorSuccess" />
			<StaticResource x:Key="ThemedIconNeutralBrush" ResourceKey="SystemFillColorSolidNeutral" />

			<StaticResource x:Key="ThemedIconCriticalBackgroundBrush" ResourceKey="SystemFillColorCriticalBackgroundBrush" />
			<StaticResource x:Key="ThemedIconCautionBackgroundBrush" ResourceKey="SystemFillColorCautionBackgroundBrush" />
			<StaticResource x:Key="ThemedIconSuccessBackgroundBrush" ResourceKey="SystemFillColorSuccessBackgroundBrush" />
			<StaticResource x:Key="ThemedIconNeutralBackgroundBrush" ResourceKey="SystemFillColorNeutralBackgroundBrush" />
		</ResourceDictionary>

		<ResourceDictionary x:Key="HighContrast">
			<Color x:Key="ThemedIconBaseColor">#FF000000</Color>
			<Color x:Key="ThemedIconAltColor">#00000000</Color>

			<StaticResource x:Key="ThemedIconBaseBrush" ResourceKey="SystemColorButtonTextColor" />
			<StaticResource x:Key="ThemedIconAltBrush" ResourceKey="SystemColorButtonFaceColor" />
			<StaticResource x:Key="ThemedIconAccentBrush" ResourceKey="SystemColorHighlightColor" />
			<StaticResource x:Key="ThemedIconAccentContrastBrush" ResourceKey="SystemColorHighlightTextColor" />
			<StaticResource x:Key="ThemedIconDisabledBrush" ResourceKey="SystemColorGrayTextColor" />
			<StaticResource x:Key="ThemedIconHighContrastBrush" ResourceKey="SystemColorButtonTextColor" />

			<StaticResource x:Key="ThemedIconCriticalBrush" ResourceKey="SystemColorHighlightTextColorBrush" />
			<StaticResource x:Key="ThemedIconCautionBrush" ResourceKey="SystemColorHighlightTextColorBrush" />
			<StaticResource x:Key="ThemedIconSuccessBrush" ResourceKey="SystemColorHighlightTextColorBrush" />
			<StaticResource x:Key="ThemedIconNeutralBrush" ResourceKey="SystemColorHighlightTextColorBrush" />

			<StaticResource x:Key="ThemedIconCriticalBackgroundBrush" ResourceKey="SystemColorWindowColorBrush" />
			<StaticResource x:Key="ThemedIconCautionBackgroundBrush" ResourceKey="SystemColorWindowColorBrush" />
			<StaticResource x:Key="ThemedIconSuccessBackgroundBrush" ResourceKey="SystemColorWindowColorBrush" />
			<StaticResource x:Key="ThemedIconNeutralBackgroundBrush" ResourceKey="SystemColorWindowColorBrush" />
		</ResourceDictionary>

	</ResourceDictionary.ThemeDictionaries>

	<Style BasedOn="{StaticResource DefaultThemedIconStyle}" TargetType="local:ThemedIcon" />

	<Style BasedOn="{StaticResource DefaultThemedIconLayerStyle}" TargetType="local:ThemedIconLayer" />

	<Style x:Key="DefaultThemedIconStyle" TargetType="local:ThemedIcon">

		<Setter Property="Width" Value="16" />
		<Setter Property="Height" Value="16" />

		<Setter Property="OutlineIconData" Value="M8 2C4.68629 2 2 4.68629 2 8C2 11.3137 4.68629 14 8 14C11.3137 14 14 11.3137 14 8C14 4.68629 11.3137 2 8 2ZM1 8C1 4.13401 4.13401 1 8 1C11.866 1 15 4.13401 15 8C15 11.866 11.866 15 8 15C4.13401 15 1 11.866 1 8Z" />
		<Setter Property="FilledIconData" Value="M8 1C4.13401 1 1 4.13401 1 8C1 11.866 4.13401 15 8 15C11.866 15 15 11.866 15 8C15 4.13401 11.866 1 8 1Z" />

		<Setter Property="Layers">
			<Setter.Value>
				<local:ThemedIconLayers>
					<local:ThemedIconLayer
						LayerType="Base"
						Opacity="1.0"
						PathData="M8 2C4.68629 2 2 4.68629 2 8C2 11.3137 4.68629 14 8 14C11.3137 14 14 11.3137 14 8C14 4.68629 11.3137 2 8 2ZM1 8C1 4.13401 4.13401 1 8 1C11.866 1 15 4.13401 15 8C15 11.866 11.866 15 8 15C4.13401 15 1 11.866 1 8Z" />
					<local:ThemedIconLayer
						LayerType="Alt"
						Opacity="1.0"
						PathData="M8 1.5C4.41015 1.5 1.5 4.41015 1.5 8C1.5 11.5899 4.41015 14.5 8 14.5C11.5899 14.5 14.5 11.5899 14.5 8C14.5 4.41015 11.5899 1.5 8 1.5Z" />
				</local:ThemedIconLayers>
			</Setter.Value>
		</Setter>

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:ThemedIcon">
					<Grid
						x:Name="ControlRoot"
						Width="{TemplateBinding Width}"
						Height="{TemplateBinding Height}"
						HorizontalAlignment="Center"
						VerticalAlignment="Center">
						<!--  Filled  -->
						<Viewbox
							x:Name="PART_FilledIconViewBox"
							Width="{TemplateBinding Width}"
							Height="{TemplateBinding Height}"
							Stretch="UniformToFill"
							UseLayoutRounding="False">
							<Path x:Name="PART_FilledPath" Fill="{ThemeResource ThemedIconAccentBrush}" />
						</Viewbox>

						<!--  Outline  -->
						<Viewbox
							x:Name="PART_OutlineIconViewBox"
							Width="{TemplateBinding Width}"
							Height="{TemplateBinding Height}"
							Stretch="UniformToFill"
							UseLayoutRounding="False">
							<Path x:Name="PART_OutlinePath" Fill="{ThemeResource ThemedIconBaseBrush}" />
						</Viewbox>

						<!--  Layered (Rendered From Top to Bottom in The Visual Tree Order)  -->
						<Viewbox
							x:Name="PART_LayeredIconViewBox"
							Width="{TemplateBinding Width}"
							Height="{TemplateBinding Height}"
							Stretch="UniformToFill"
							UseLayoutRounding="False">
							<Canvas
								x:Name="PART_LayerCanvas"
								Width="{TemplateBinding Width}"
								Height="{TemplateBinding Height}"
								UseLayoutRounding="False" />
						</Viewbox>

						<VisualStateManager.VisualStateGroups>

							<VisualStateGroup x:Name="IconTypeStates">
								<VisualState x:Name="Outline">
									<VisualState.Setters>
										<Setter Target="PART_OutlineIconViewBox.Visibility" Value="Visible" />
										<Setter Target="PART_FilledIconViewBox.Visibility" Value="Collapsed" />
										<Setter Target="PART_LayeredIconViewBox.Visibility" Value="Collapsed" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Filled">
									<VisualState.Setters>
										<Setter Target="PART_OutlineIconViewBox.Visibility" Value="Collapsed" />
										<Setter Target="PART_FilledIconViewBox.Visibility" Value="Visible" />
										<Setter Target="PART_LayeredIconViewBox.Visibility" Value="Collapsed" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Layered">
									<VisualState.Setters>
										<Setter Target="PART_OutlineIconViewBox.Visibility" Value="Collapsed" />
										<Setter Target="PART_FilledIconViewBox.Visibility" Value="Collapsed" />
										<Setter Target="PART_LayeredIconViewBox.Visibility" Value="Visible" />
									</VisualState.Setters>
								</VisualState>
							</VisualStateGroup>

							<VisualStateGroup x:Name="IconColorStates">
								<VisualState x:Name="Normal">
									<VisualState.Setters>
										<Setter Target="PART_OutlinePath.Fill" Value="{ThemeResource ThemedIconBaseBrush}" />
										<Setter Target="PART_FilledPath.Fill" Value="{ThemeResource ThemedIconAccentBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Critical">
									<VisualState.Setters>
										<Setter Target="PART_OutlinePath.Fill" Value="{ThemeResource ThemedIconCriticalBrush}" />
										<Setter Target="PART_FilledPath.Fill" Value="{ThemeResource ThemedIconCriticalBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Caution">
									<VisualState.Setters>
										<Setter Target="PART_OutlinePath.Fill" Value="{ThemeResource ThemedIconCautionBrush}" />
										<Setter Target="PART_FilledPath.Fill" Value="{ThemeResource ThemedIconCautionBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Success">
									<VisualState.Setters>
										<Setter Target="PART_OutlinePath.Fill" Value="{ThemeResource ThemedIconSuccessBrush}" />
										<Setter Target="PART_FilledPath.Fill" Value="{ThemeResource ThemedIconSuccessBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Neutral">
									<VisualState.Setters>
										<Setter Target="PART_OutlinePath.Fill" Value="{ThemeResource ThemedIconNeutralBrush}" />
										<Setter Target="PART_FilledPath.Fill" Value="{ThemeResource ThemedIconNeutralBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Toggle">
									<VisualState.Setters>
										<Setter Target="PART_OutlinePath.Fill" Value="{ThemeResource ThemedIconAccentContrastBrush}" />
										<Setter Target="PART_FilledPath.Fill" Value="{ThemeResource ThemedIconAccentContrastBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="HighContrast">
									<VisualState.Setters>
										<Setter Target="PART_OutlinePath.Fill" Value="{ThemeResource ThemedIconHighContrastBrush}" />
										<Setter Target="PART_FilledPath.Fill" Value="{ThemeResource ThemedIconHighContrastBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Disabled">
									<VisualState.Setters>
										<Setter Target="PART_OutlinePath.Fill" Value="{ThemeResource ThemedIconDisabledBrush}" />
										<Setter Target="PART_FilledPath.Fill" Value="{ThemeResource ThemedIconDisabledBrush}" />
									</VisualState.Setters>
								</VisualState>
							</VisualStateGroup>

							<VisualStateGroup x:Name="EnabledStates">
								<VisualState x:Name="Enabled">
									<VisualState.Setters>
										<Setter Target="PART_LayerCanvas.Visibility" Value="Visible" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="NotEnabled">
									<VisualState.Setters>
										<Setter Target="PART_LayerCanvas.Visibility" Value="Collapsed" />
									</VisualState.Setters>
								</VisualState>
							</VisualStateGroup>

						</VisualStateManager.VisualStateGroups>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>

	</Style>

	<Style x:Key="DefaultThemedIconLayerStyle" TargetType="local:ThemedIconLayer">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:ThemedIconLayer">
					<Grid>
						<Path
							x:Name="PART_LayerPath"
							Width="{TemplateBinding Width}"
							Height="{TemplateBinding Height}" />

						<VisualStateManager.VisualStateGroups>

							<VisualStateGroup x:Name="IconLayerColorStates">
								<VisualState x:Name="Base">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconBaseBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Alt">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconAltBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Accent">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconAccentBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="AccentContrast">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconAccentContrastBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Critical">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconCriticalBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="CriticalBG">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconCriticalBackgroundBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Caution">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconCautionBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="CautionBG">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconCautionBackgroundBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Success">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconSuccessBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="SuccessBG">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconSuccessBackgroundBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Neutral">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconNeutralBrush}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="NeutralBG">
									<VisualState.Setters>
										<Setter Target="PART_LayerPath.Fill" Value="{ThemeResource ThemedIconNeutralBackgroundBrush}" />
									</VisualState.Setters>
								</VisualState>
							</VisualStateGroup>

						</VisualStateManager.VisualStateGroups>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>

	</Style>

</ResourceDictionary>
