<UserControl
    x:Class="Files.App.UserControls.SideBar.SideBarPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls" 
	mc:Ignorable="d"
	Background="Red"
    MinWidth="300" MinHeight="500">

	<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="DisplayColumn" Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="DisplayModes">
                <VisualState x:Name="Expanded" />
                <VisualState x:Name="Compact">
                    <VisualState.Setters>
						<Setter Target="DisplayColumn.Width" Value="48"/>
						<Setter Target="MenuItemsHost.MaxWidth" Value="48"/>
					</VisualState.Setters>
                </VisualState>
                <VisualState x:Name="MinimalCollapsed">
                    <VisualState.Setters>
						<Setter Target="DisplayColumn.Width" Value="0"/>
						<Setter Target="DisplayColumnGrid.MaxWidth" Value="0"/>
						<Setter Target="DisplayColumnGrid.Background" Value="Red"/>
						<Setter Target="ContentPresenter.(Grid.Column)" Value="0"/>
                        <Setter Target="ContentPresenter.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="SideBarResizer.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="MinimalExpanded">
                    <VisualState.Setters>
						<Setter Target="DisplayColumn.Width" Value="300"/>
						<Setter Target="DisplayColumnGrid.Background" Value="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"/>
						<Setter Target="ContentPresenter.(Grid.Column)" Value="0"/>
                        <Setter Target="ContentPresenter.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="SideBarResizer.Visibility" Value="Collapsed"/>
                        <Setter Target="PaneLightDismissLayer.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

		<Grid x:Name="ContentPresenter" Background="{ThemeResource App.Theme.Sidebar.BackgroundBrush}"
			Grid.Column="2" HorizontalAlignment="Stretch">
			<ContentPresenter
				Background="{ThemeResource App.Theme.FileArea.BackgroundBrush}"
				VerticalAlignment="Stretch" Content="{x:Bind InnerContent, Mode=OneWay}"/>
		</Grid>
        <Grid x:Name="PaneLightDismissLayer" Grid.Column="2" Grid.ColumnSpan="3"
            Visibility="Collapsed"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Background="Transparent"
            PointerPressed="PaneLightDismissLayer_PointerPressed"
            Tapped="PaneLightDismissLayer_Tapped"/>

		<Grid x:Name="DisplayColumnGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
			Background="{ThemeResource App.Theme.Sidebar.BackgroundBrush}">
            <ScrollViewer HorizontalScrollMode="Disabled" Background="Transparent">
				<ItemsRepeater x:Name="MenuItemsHost" VerticalCacheLength="100"
						ItemTemplate="{StaticResource DefaultSideBarItemTemplate}"
                        ItemsSource="{x:Bind Items, Mode=OneWay}">
					<ItemsRepeater.Layout>
                        <StackLayout />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
        <controls:GridSplitter x:Name="SideBarResizer" Grid.Column="1"
            Width="0" MinWidth="1"
            Foreground="Transparent"
			GripperForeground="Transparent"
			Background="{ThemeResource ControlFillColorInputActiveBrush}"
            ManipulationDelta="GridSplitter_ManipulationDelta" 
            ManipulationStarted="GridSplitter_ManipulationStarted" />
    </Grid>
</UserControl>
 