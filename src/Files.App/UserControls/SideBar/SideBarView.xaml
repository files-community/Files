<UserControl
	x:Class="Files.App.UserControls.Sidebar.SidebarView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:triggers="using:CommunityToolkit.WinUI.UI.Triggers"
	HorizontalAlignment="Stretch"
	Loaded="SidebarView_Loaded"
	SizeChanged="SidebarView_SizeChanged"
	mc:Ignorable="d">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="DisplayColumn" Width="240" MaxWidth="480"/>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!--  This is the background for the sidebar pane and sidebar content  -->
		<Border
			x:Name="PaneBackground"
			Grid.Row="1"
			Grid.ColumnSpan="3"
			Background="{ThemeResource App.Theme.Sidebar.BackgroundBrush}" />

		<Grid
			x:Name="ContentPresenter"
			Grid.Row="1"
			Grid.Column="2"
			HorizontalAlignment="Stretch"
			Background="{ThemeResource App.Theme.FileArea.BackgroundBrush}"
			BackgroundSizing="InnerBorderEdge"
			BorderBrush="{ThemeResource ControlStrokeColorDefault}"
			BorderThickness="1,1,0,0"
			CornerRadius="8,0,0,0">
			<ContentPresenter VerticalAlignment="Stretch" Content="{x:Bind InnerContent, Mode=OneWay}" />
		</Grid>
		<Grid
			x:Name="PaneLightDismissLayer"
			Grid.Row="1"
			Grid.Column="2"
			Grid.ColumnSpan="3"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Background="Transparent"
			PointerPressed="PaneLightDismissLayer_PointerPressed"
			Tapped="PaneLightDismissLayer_Tapped"
			Visibility="Collapsed" />

		<Grid
			x:Name="DisplayColumnGrid"
			Grid.Row="1"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch">
			<ScrollViewer
				x:Name="MenuItemHostScrollViewer"
				Padding="2,8,2,2"
				Background="Transparent"
				HorizontalScrollMode="Disabled">
				<ItemsRepeater
					x:Name="MenuItemsHost"
					ItemTemplate="{StaticResource DefaultSidebarItemTemplate}"
					ItemsSource="{x:Bind ViewModel.SidebarItems, Mode=OneWay}"
					VerticalCacheLength="100">
					<ItemsRepeater.Layout>
						<StackLayout x:Name="MenuItemsHostLayout" Spacing="16" />
					</ItemsRepeater.Layout>
				</ItemsRepeater>
			</ScrollViewer>
		</Grid>
		<controls:GridSplitter
			x:Name="SidebarResizer"
			Grid.Row="1"
			Grid.Column="1"
			Width="0"
			MinWidth="1"
			Margin="0,8,0,0"
			Background="Transparent"
			Foreground="Transparent"
			GripperForeground="Transparent"
			DoubleTapped="SidebarResizer_DoubleTapped"
			ManipulationDelta="GridSplitter_ManipulationDelta"
			ManipulationStarted="GridSplitter_ManipulationStarted" />

		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup x:Name="TogglePaneButtonStates">
				<VisualState x:Name="TogglePaneButtonHidden" />
				<VisualState x:Name="TogglePaneButtonVisible">
					<VisualState.StateTriggers>
						<triggers:CompareStateTrigger
							Comparison="Equal"
							Value="{x:Bind DisplayMode, Mode=OneWay}"
							To="Minimal" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="TogglePaneButton.Visibility" Value="Visible" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
			<VisualStateGroup x:Name="DisplayModes">
				<VisualState x:Name="Expanded" />
				<VisualState x:Name="Compact">
					<VisualState.Setters>
						<Setter Target="DisplayColumn.Width" Value="56" />
						<Setter Target="MenuItemsHost.MaxWidth" Value="56" />
						<Setter Target="MenuItemsHostLayout.Spacing" Value="0" />
					</VisualState.Setters>
				</VisualState>
				<VisualState x:Name="MinimalCollapsed">
					<VisualState.Setters>
						<Setter Target="DisplayColumn.Width" Value="0" />
						<Setter Target="DisplayColumnGrid.MaxWidth" Value="0" />
						<Setter Target="DisplayColumnGrid.Background" Value="Red" />
						<Setter Target="ContentPresenter.(Grid.Column)" Value="0" />
						<Setter Target="ContentPresenter.(Grid.ColumnSpan)" Value="3" />
						<Setter Target="ContentPresenter.CornerRadius" Value="0" />
						<Setter Target="SidebarResizer.Visibility" Value="Collapsed" />
					</VisualState.Setters>
				</VisualState>
				<VisualState x:Name="MinimalExpanded">
					<VisualState.Setters>
						<Setter Target="DisplayColumn.Width" Value="300" />
						<Setter Target="DisplayColumnGrid.Background" Value="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" />
						<Setter Target="DisplayColumnGrid.BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
						<Setter Target="DisplayColumnGrid.BorderThickness" Value="0,1,1,0" />
						<Setter Target="DisplayColumnGrid.CornerRadius" Value="0,8,0,8" />
						<Setter Target="ContentPresenter.(Grid.Column)" Value="0" />
						<Setter Target="ContentPresenter.(Grid.ColumnSpan)" Value="3" />
						<Setter Target="ContentPresenter.CornerRadius" Value="0" />
						<Setter Target="SidebarResizer.Visibility" Value="Collapsed" />
						<Setter Target="PaneLightDismissLayer.Visibility" Value="Visible" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
	</Grid>
</UserControl>
