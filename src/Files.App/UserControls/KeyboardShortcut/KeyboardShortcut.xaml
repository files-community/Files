<ResourceDictionary
	x:Class="Files.App.UserControls.Sidebar.SidebarResources"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:dataitems="using:Files.App.Data.Items"
	xmlns:local="using:Files.App.UserControls.KeyboardShortcut">

	<Style TargetType="local:KeyboardShortcut">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:KeyboardShortcut">
					<Grid x:Name="PART_ContentRoot">

						<ItemsRepeater x:Name="PART_KeyboardShortcutItemsRepeater">
							<ItemsRepeater.Layout>
								<StackLayout Orientation="Horizontal" />
							</ItemsRepeater.Layout>
							<ItemsRepeater.Template>
								<DataTemplate x:TargetType="dataitems:KeyboardShortcutItem">
									<Grid>
										<TextBlock Text="{x:Bind ShortcutText}" />
									</Grid>
								</DataTemplate>
							</ItemsRepeater.Template>
						</ItemsRepeater>

					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
