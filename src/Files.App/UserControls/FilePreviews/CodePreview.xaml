<UserControl
	x:Class="Files.App.UserControls.FilePreviews.CodePreview"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Files.App.UserControls.FilePreviews"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="400"
	ActualThemeChanged="UserControl_ActualThemeChanged"
	Loaded="UserControl_Loaded"
	mc:Ignorable="d">

	<Border>
		<ScrollViewer HorizontalScrollBarVisibility="Auto" HorizontalScrollMode="Auto">

			<RichTextBlock
				Name="codeView"
				Padding="10"
				FontFamily="Consolas" />

		</ScrollViewer>
	</Border>
</UserControl>
