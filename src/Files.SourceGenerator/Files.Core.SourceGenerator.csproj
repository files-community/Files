<Project Sdk="Microsoft.NET.Sdk">

    <!--  NOTE: Analyzer Project Should Be Targeted .NET Standard 2.0 Framework  -->
    <!--  NOTE: Analyzer Project Should Be Targeted Any CPU Platform  -->
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <PlatformTarget>AnyCPU</PlatformTarget>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <Product>Files</Product>
        <Copyright>Copyright (c) 2023 Files Community</Copyright>
        <Authors>Files Community</Authors>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.5.0" PrivateAssets="all" />
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4" PrivateAssets="all" />
        <PackageReference Include="PolySharp" Version="1.13.2" PrivateAssets="all" IncludeAssets="runtime; build; native; contentfiles; analyzers; buildtransitive" />
    </ItemGroup>

</Project>
