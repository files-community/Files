<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Files.App.Controls"
	xmlns:primitives="using:Files.App.Controls.Primitives">

	<Style BasedOn="{StaticResource DefaultToolbarStyle}" TargetType="local:Toolbar" />

	<Style x:Key="DefaultToolbarStyle" TargetType="local:Toolbar">
		<Setter Property="Background" Value="Red" />
		<Setter Property="BackgroundSizing" Value="OuterBorderEdge" />
		<Setter Property="BorderBrush" Value="#88FFFF00" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="CornerRadius" Value="8,8,8,8" />
		<Setter Property="Padding" Value="4,4,4,4" />

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:Toolbar">

					<Border
						x:Name="RootBorder"
						Padding="{TemplateBinding Padding}"
						Background="{TemplateBinding Background}"
						BackgroundSizing="{TemplateBinding BackgroundSizing}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}"
						CornerRadius="{TemplateBinding CornerRadius}">

						<Grid x:Name="RootGrid">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition x:Name="SeparatorColumn" Width="Auto" />
								<ColumnDefinition x:Name="OverflowColumn" Width="Auto" />
							</Grid.ColumnDefinitions>

							<!--  Stack Panel is a placeholder to be replaced with the ItemsRepeater  -->
							<ItemsRepeater x:Name="PART_ItemsRepeater" Visibility="Collapsed">
								<ItemsRepeater.Layout>
									<primitives:ToolbarLayout />
								</ItemsRepeater.Layout>
							</ItemsRepeater>

							<StackPanel
								Grid.Column="0"
								HorizontalAlignment="Left"
								Background="#88FFFFFF"
								Orientation="Horizontal"
								Spacing="4"
								Visibility="Visible">
								<Border
									Width="40"
									Height="32"
									Background="Black"
									BackgroundSizing="OuterBorderEdge"
									BorderBrush="#DD808080"
									BorderThickness="1"
									CornerRadius="4" />
								<Border
									Width="40"
									Height="32"
									Background="Black"
									BackgroundSizing="OuterBorderEdge"
									BorderBrush="#DD808080"
									BorderThickness="1"
									CornerRadius="4" />
								<Border Width="4" Height="32">
									<Rectangle
										Width="1"
										Height="24"
										HorizontalAlignment="Center"
										Fill="Yellow"
										RadiusX="0.5"
										RadiusY="0.5" />
								</Border>
								<Border
									Width="40"
									Height="32"
									Background="Black"
									BackgroundSizing="OuterBorderEdge"
									BorderBrush="#DD808080"
									BorderThickness="1"
									CornerRadius="4" />
							</StackPanel>

							<Border
								x:Name="OverflowSeparator"
								Grid.Column="1"
								Width="4"
								Height="32"
								Margin="4,0,4,0">
								<Rectangle
									Width="1"
									Height="24"
									HorizontalAlignment="Center"
									Fill="Cyan"
									RadiusX="0.5"
									RadiusY="0.5" />
							</Border>

							<Border
								x:Name="OverflowButton"
								Grid.Column="2"
								Width="40"
								Height="32"
								Background="DarkBlue"
								BorderBrush="#DD808080"
								BorderThickness="1"
								CornerRadius="4" />
						</Grid>

					</Border>

				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
