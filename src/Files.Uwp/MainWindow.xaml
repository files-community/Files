<Window
    x:Class="Files.Uwp.MainWindow"
    xmlns:local="using:Files.Uwp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar" Height="40" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                <ColumnDefinition x:Name="IconColumn" Width="48"/>
                <ColumnDefinition x:Name="TitleColumn" Width="Auto"/>
                <ColumnDefinition x:Name="DragColumn" Width="*"/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <AppBarButton
               x:Name="AppTitleBarBackButton"
               Grid.Column="1"
               Width="Auto"
               Height="Auto"
               Margin="10,0,10,0"
               Padding="10,0,10,0">
                <SymbolIcon Symbol="Back" />
            </AppBarButton>
            <TextBlock x:Name="TitleTextBlock" 
               Text="Photo Lab" 
               Style="{StaticResource CaptionTextBlockStyle}"
               Grid.Column="2"
               VerticalAlignment="Center"
               Margin="4,0,0,0"/>
        </Grid>
        <!-- Your pages will be loaded in this Frame -->
        <Frame Grid.Row="1" Height="Auto" x:Name="PageFrame" />

    </Grid>

</Window>
