<controls:MenuFlyout
    x:Class="Files.Uwp.UserControls.Menus.FileTagsContextMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Windows.UI.Xaml.Controls"
    xmlns:helpers="using:Files.Uwp.Helpers"
    xmlns:local="using:Files.Uwp.UserControls.Menus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vc="using:Files.Uwp.ValueConverters"
    xmlns:vm="using:Files.Backend.ViewModels.FileTags"
    Opening="MenuFlyout_Opening">

    <helpers:MenuFlyoutHelper.ItemTemplates>
        <DataTemplate x:Key="FileTagTemplate" x:DataType="vm:FileTagViewModel">
            <ToggleMenuFlyoutItem
                Click="TagItem_Click"
                Foreground="{x:Bind vc:ColorModelToColorConverter.Convert(ColorModel), Mode=OneWay}"
                Text="{x:Bind TagName}">
                <ToggleMenuFlyoutItem.Style>
                    <Style BasedOn="{StaticResource ToggleMenuFlyoutItemRevealStyle}" TargetType="ToggleMenuFlyoutItem" />
                </ToggleMenuFlyoutItem.Style>
            </ToggleMenuFlyoutItem>
        </DataTemplate>
    </helpers:MenuFlyoutHelper.ItemTemplates>

</controls:MenuFlyout>