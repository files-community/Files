<UserControl
    x:Class="Files.UserControls.Search.CalendarRangePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="400" d:DesignHeight="300" mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CalendarDatePicker Grid.Row="0" HorizontalAlignment="Stretch" Header="From" Date="{x:Bind MinOffset, Mode=TwoWay}" />
        <CalendarDatePicker Grid.Row="1" HorizontalAlignment="Stretch" Header="To" Date="{x:Bind MaxOffset, Mode=TwoWay}" />
    </Grid>

</UserControl>
