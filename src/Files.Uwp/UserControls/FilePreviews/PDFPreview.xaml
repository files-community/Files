<UserControl
    x:Class="Files.Uwp.UserControls.FilePreviews.PDFPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.Uwp.UserControls.FilePreviews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:vms="using:Files.Uwp.ViewModels.Previews"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="PageTemplate" x:DataType="vms:PageViewModel">
            <Grid
                Margin="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="{StaticResource ControlCornerRadius}">
                <Viewbox
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    StretchDirection="DownOnly">
                    <Image
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Source="{x:Bind PageImage}" />
                </Viewbox>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <FlipView
            x:Name="PageList"
            Background="Transparent"
            ItemTemplate="{StaticResource PageTemplate}"
            ItemsSource="{x:Bind ViewModel.Pages, Mode=OneWay}" />
        <muxc:PipsPager
            x:Name="FlipViewPipsPager"
            Grid.Row="1"
            HorizontalAlignment="Center"
            NumberOfPages="{x:Bind ViewModel.PageCount, Mode=OneWay}"
            SelectedPageIndex="{x:Bind Path=PageList.SelectedIndex, Mode=TwoWay}" />
    </Grid>
</UserControl>