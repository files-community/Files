<Page
	x:Class="Files.App.UITests.Views.SidebarViewPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:Files.App.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Files.App.UITests.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<StackPanel Spacing="24">

		<controls:SamplePanel Header="Default usage">
			<controls:SamplePanel.MainContent>
				<controls:SidebarView x:Name="Sidebar" MenuItemsSource="{x:Bind SidebarViewItems, Mode=OneWay}" />
			</controls:SamplePanel.MainContent>
		</controls:SamplePanel>

	</StackPanel>
</Page>
