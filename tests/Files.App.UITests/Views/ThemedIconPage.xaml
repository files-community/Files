<Page
	x:Class="Files.App.UITests.Views.ThemedIconPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:Files.App.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Files.App.UITests.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Page.Resources>
		<ResourceDictionary>
			<Style
				x:Key="IconTest"
				BasedOn="{StaticResource App.ThemedIcons.Actions.FontInstall}"
				TargetType="controls:ThemedIcon" />
		</ResourceDictionary>
	</Page.Resources>

	<StackPanel Spacing="24">

		<!--  Icon Types and Colors  -->
		<controls:SamplePanel Header="Icon Types and Colors">
			<controls:SamplePanel.MainContent>
				<Grid ColumnSpacing="16" RowSpacing="12">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<!--  Icon Column Headers  -->
					<TextBlock
						Grid.Row="0"
						Grid.Column="1"
						Style="{StaticResource TextExampleCaptionStyle}"
						Text="Layered" />

					<TextBlock
						Grid.Row="0"
						Grid.Column="2"
						Style="{StaticResource TextExampleCaptionStyle}"
						Text="Filled" />

					<TextBlock
						Grid.Row="0"
						Grid.Column="3"
						Style="{StaticResource TextExampleCaptionStyle}"
						Text="Outline" />

					<!--  Icon Row Headers  -->
					<TextBlock
						Grid.Row="1"
						Grid.Column="0"
						Text="Normal" />

					<TextBlock
						Grid.Row="2"
						Grid.Column="0"
						MaxLines="1"
						Text="Disabled" />

					<TextBlock
						Grid.Row="3"
						Grid.Column="0"
						Text="Success" />

					<TextBlock
						Grid.Row="4"
						Grid.Column="0"
						Text="Caution" />

					<TextBlock
						Grid.Row="5"
						Grid.Column="0"
						Text="Critical" />

					<TextBlock
						Grid.Row="6"
						Grid.Column="0"
						Text="Accent" />

					<TextBlock
						Grid.Row="7"
						Grid.Column="0"
						Text="Neutral" />

					<TextBlock
						Grid.Row="8"
						Grid.Column="0"
						Text="Custom" />

					<!--  Normal Icons Row 1  -->
					<controls:ThemedIcon
						Grid.Row="1"
						Grid.Column="1"
						IconColorType="Normal"
						IconType="Layered"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="1"
						Grid.Column="2"
						IconColorType="Normal"
						IsFilled="True"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="1"
						Grid.Column="3"
						IconColorType="Normal"
						IconType="Outline"
						Style="{StaticResource IconTest}" />

					<!--  Disabled Icons Row 2  -->
					<controls:ThemedIcon
						Grid.Row="2"
						Grid.Column="1"
						IconType="Layered"
						IsEnabled="False"
						Style="{StaticResource IconTest}" />
					<controls:ThemedIcon
						Grid.Row="2"
						Grid.Column="2"
						IsEnabled="False"
						IsFilled="True"
						Style="{StaticResource IconTest}" />
					<controls:ThemedIcon
						Grid.Row="2"
						Grid.Column="3"
						IconType="Outline"
						IsEnabled="False"
						Style="{StaticResource IconTest}" />

					<!--  Success Icons Row 3  -->
					<controls:ThemedIcon
						Grid.Row="3"
						Grid.Column="1"
						IconColorType="Success"
						IconType="Layered"
						Style="{StaticResource IconTest}" />
					<controls:ThemedIcon
						Grid.Row="3"
						Grid.Column="2"
						IconColorType="Success"
						IsFilled="True"
						Style="{StaticResource IconTest}" />
					<controls:ThemedIcon
						Grid.Row="3"
						Grid.Column="3"
						IconColorType="Success"
						IconType="Outline"
						Style="{StaticResource IconTest}" />

					<!--  Caution Icons Row 4  -->
					<controls:ThemedIcon
						Grid.Row="4"
						Grid.Column="1"
						IconColorType="Caution"
						IconType="Layered"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="4"
						Grid.Column="2"
						IconColorType="Caution"
						IsFilled="True"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="4"
						Grid.Column="3"
						IconColorType="Caution"
						IconType="Outline"
						Style="{StaticResource IconTest}" />

					<!--  Critical Icons Row 5  -->
					<controls:ThemedIcon
						Grid.Row="5"
						Grid.Column="1"
						IconColorType="Critical"
						IconType="Layered"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="5"
						Grid.Column="2"
						IconColorType="Critical"
						IsFilled="True"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="5"
						Grid.Column="3"
						IconColorType="Critical"
						IconType="Outline"
						Style="{StaticResource IconTest}" />

					<!--  Accent Icons Row 6  -->
					<controls:ThemedIcon
						Grid.Row="6"
						Grid.Column="1"
						IconColorType="Accent"
						IconType="Layered"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="6"
						Grid.Column="2"
						IconColorType="Accent"
						IsFilled="True"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="6"
						Grid.Column="3"
						IconColorType="Accent"
						IconType="Outline"
						Style="{StaticResource IconTest}" />

					<!--  Neutral Icons Row 7  -->
					<controls:ThemedIcon
						Grid.Row="7"
						Grid.Column="1"
						IconColorType="Neutral"
						IconType="Layered"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="7"
						Grid.Column="2"
						IconColorType="Neutral"
						IsFilled="True"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="7"
						Grid.Column="3"
						IconColorType="Neutral"
						IconType="Outline"
						Style="{StaticResource IconTest}" />

					<!--  Custom Icons Row 8  -->
					<controls:ThemedIcon
						Grid.Row="8"
						Grid.Column="1"
						Foreground="Cyan"
						IconColorType="Custom"
						IconType="Layered"
						Style="{StaticResource IconTest}">
						<controls:ThemedIcon.Color>
							<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
								<GradientStop Offset="0.0" Color="PaleVioletRed" />
								<GradientStop Offset="1.0" Color="Red" />
							</LinearGradientBrush>
						</controls:ThemedIcon.Color>
					</controls:ThemedIcon>

					<controls:ThemedIcon
						Grid.Row="8"
						Grid.Column="2"
						IconColorType="Custom"
						IsFilled="True"
						Style="{StaticResource IconTest}">
						<controls:ThemedIcon.Color>
							<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
								<GradientStop Offset="0.0" Color="PaleGoldenrod" />
								<GradientStop Offset="1.0" Color="Orange" />
							</LinearGradientBrush>
						</controls:ThemedIcon.Color>
					</controls:ThemedIcon>

					<controls:ThemedIcon
						Grid.Row="8"
						Grid.Column="3"
						IconColorType="Custom"
						IconType="Outline"
						Style="{StaticResource IconTest}">
						<controls:ThemedIcon.Color>
							<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
								<GradientStop Offset="0.0" Color="PaleTurquoise" />
								<GradientStop Offset="1.0" Color="Teal" />
							</LinearGradientBrush>
						</controls:ThemedIcon.Color>
					</controls:ThemedIcon>

				</Grid>
			</controls:SamplePanel.MainContent>
		</controls:SamplePanel>

		<!--  Toggled usages  -->
		<controls:SamplePanel Header="Toggled usages">
			<controls:SamplePanel.MainContent>
				<StackPanel Spacing="12">

					<TextBlock Text="HighContrast Manual Toggle:" />

					<StackPanel
						Padding="8"
						Orientation="Horizontal"
						Spacing="16">
						<controls:ThemedIcon
							IconType="Layered"
							IsHighContrast="{x:Bind ContrastToggle.IsOn, Mode=TwoWay}"
							Style="{StaticResource IconTest}" />
						<controls:ThemedIcon
							IsFilled="True"
							IsHighContrast="{x:Bind ContrastToggle.IsOn, Mode=TwoWay}"
							Style="{StaticResource IconTest}" />
						<controls:ThemedIcon
							IconType="Outline"
							IsHighContrast="{x:Bind ContrastToggle.IsOn, Mode=TwoWay}"
							Style="{StaticResource IconTest}" />
					</StackPanel>

					<TextBlock Text="ToggleBehavior On:" />

					<StackPanel
						Padding="8"
						HorizontalAlignment="Left"
						Background="{ThemeResource ToggleBackground}"
						CornerRadius="{ThemeResource OverlayCornerRadius}"
						Orientation="Horizontal"
						Spacing="16">
						<controls:ThemedIcon
							IconType="Layered"
							Style="{StaticResource IconTest}"
							ToggleBehavior="On" />
						<controls:ThemedIcon
							IsFilled="True"
							Style="{StaticResource IconTest}"
							ToggleBehavior="On" />
						<controls:ThemedIcon
							IconType="Outline"
							Style="{StaticResource IconTest}"
							ToggleBehavior="On" />
					</StackPanel>

					<TextBlock Text="ToggleBahvior On + Disabled:" />

					<StackPanel
						Padding="8"
						HorizontalAlignment="Left"
						Background="{ThemeResource ToggleDisabledBackground}"
						CornerRadius="{ThemeResource OverlayCornerRadius}"
						Orientation="Horizontal"
						Spacing="16">
						<controls:ThemedIcon
							IconType="Layered"
							IsEnabled="False"
							Style="{StaticResource IconTest}"
							ToggleBehavior="On" />
						<controls:ThemedIcon
							IsEnabled="False"
							IsFilled="True"
							Style="{StaticResource IconTest}"
							ToggleBehavior="On" />
						<controls:ThemedIcon
							IconType="Outline"
							IsEnabled="False"
							Style="{StaticResource IconTest}"
							ToggleBehavior="On" />
					</StackPanel>

					<TextBlock Text="IsFilled:" />

					<StackPanel
						Padding="8"
						Orientation="Horizontal"
						Spacing="16">
						<controls:ThemedIcon
							IconType="Layered"
							IsFilled="{x:Bind FilledToggle.IsOn, Mode=TwoWay}"
							Style="{StaticResource IconTest}" />
						<controls:ThemedIcon
							IconType="Outline"
							IsFilled="{x:Bind FilledToggle.IsOn, Mode=TwoWay}"
							Style="{StaticResource IconTest}" />
					</StackPanel>

				</StackPanel>
			</controls:SamplePanel.MainContent>
			<controls:SamplePanel.SideContent>
				<StackPanel Spacing="8">

					<ToggleSwitch
						x:Name="ContrastToggle"
						Header="High contrast:"
						IsOn="True" />

					<ToggleSwitch
						x:Name="FilledToggle"
						Header="IsFilled:"
						IsOn="True"
						OffContent="False (Default)"
						OnContent="True" />

				</StackPanel>
			</controls:SamplePanel.SideContent>
		</controls:SamplePanel>

		<!--  ToggleBehaviour Auto  -->
		<controls:SamplePanel Header="ToggleBehaviour Auto">
			<controls:SamplePanel.MainContent>
				<StackPanel Spacing="12">

					<!--  Grid Row Headers  -->

					<TextBlock Text="In ToggleButtons:" />

					<StackPanel Orientation="Horizontal" Spacing="16">
						<ToggleButton
							Padding="8"
							AutomationProperties.Name="TestToggleButton1"
							IsChecked="{x:Bind TestToggleSwitch.IsOn, Mode=OneWay}">
							<controls:ThemedIcon
								IconType="Layered"
								Style="{StaticResource IconTest}"
								ToggleBehavior="Auto" />
						</ToggleButton>
						<ToggleButton
							Padding="8"
							AutomationProperties.Name="TestToggleButton2"
							IsChecked="{x:Bind TestToggleSwitch.IsOn, Mode=OneWay}">
							<controls:ThemedIcon
								IsFilled="True"
								Style="{StaticResource IconTest}"
								ToggleBehavior="Auto" />
						</ToggleButton>
						<ToggleButton
							Padding="8"
							AutomationProperties.Name="TestToggleButton3"
							IsChecked="{x:Bind TestToggleSwitch.IsOn, Mode=OneWay}">
							<controls:ThemedIcon
								IconType="Outline"
								Style="{StaticResource IconTest}"
								ToggleBehavior="Auto" />
						</ToggleButton>
						<ToggleButton
							Padding="8"
							AutomationProperties.Name="TestToggle4"
							IsChecked="{x:Bind TestToggleSwitch.IsOn, Mode=OneWay}"
							IsEnabled="False">
							<controls:ThemedIcon
								IconType="Outline"
								Style="{StaticResource IconTest}"
								ToggleBehavior="Auto" />
						</ToggleButton>
					</StackPanel>

					<TextBlock Text="In AppBarToggleButtons:" />

					<StackPanel Orientation="Horizontal" Spacing="16">
						<AppBarButton
							AutomationProperties.Name="TestAppBarToggle0-1"
							HighContrastAdjustment="None"
							Label="Layered"
							LabelPosition="Default">
							<AppBarButton.Content>
								<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
							</AppBarButton.Content>
						</AppBarButton>

						<AppBarToggleButton
							AutomationProperties.Name="TestAppBarToggle0-2"
							HighContrastAdjustment="None"
							IsChecked="True"
							Label="Layered Toggle"
							LabelPosition="Default">
							<AppBarToggleButton.Content>
								<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
							</AppBarToggleButton.Content>
						</AppBarToggleButton>

						<AppBarButton
							x:Name="OffAppBarButtonDisable"
							AutomationProperties.Name="TestAppBarToggle0-3"
							HighContrastAdjustment="None"
							IsEnabled="{x:Bind EnabledToggle.IsOn, Mode=TwoWay}"
							Label="Disabled"
							LabelPosition="Default">
							<AppBarButton.Content>
								<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
							</AppBarButton.Content>
						</AppBarButton>

						<AppBarToggleButton
							AutomationProperties.Name="TestAppBarToggle0-4"
							HighContrastAdjustment="None"
							IsChecked="True"
							IsEnabled="{x:Bind EnabledToggle.IsOn, Mode=TwoWay}"
							Label="Layered Toggled Disabled"
							LabelPosition="Default">
							<AppBarToggleButton.Content>
								<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
							</AppBarToggleButton.Content>
						</AppBarToggleButton>
					</StackPanel>

					<StackPanel Orientation="Horizontal" Spacing="16">
						<AppBarButton
							AutomationProperties.Name="TestAppBarToggle1-1"
							HighContrastAdjustment="None"
							Label="Outline"
							LabelPosition="Default">
							<AppBarButton.Content>
								<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
							</AppBarButton.Content>
						</AppBarButton>

						<AppBarToggleButton
							AutomationProperties.Name="TestAppBarToggle1-2"
							HighContrastAdjustment="None"
							IsChecked="True"
							Label="Outline Toggle"
							LabelPosition="Default">
							<AppBarToggleButton.Content>
								<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
							</AppBarToggleButton.Content>
						</AppBarToggleButton>

						<AppBarButton
							AutomationProperties.Name="TestAppBarToggle1-3"
							HighContrastAdjustment="None"
							IsEnabled="{x:Bind EnabledToggle.IsOn, Mode=TwoWay}"
							Label="Outline Disabled"
							LabelPosition="Default">
							<AppBarButton.Content>
								<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
							</AppBarButton.Content>
						</AppBarButton>

						<AppBarToggleButton
							AutomationProperties.Name="TestAppBarToggle1-4"
							HighContrastAdjustment="None"
							IsChecked="True"
							IsEnabled="{x:Bind EnabledToggle.IsOn, Mode=TwoWay}"
							Label="Outline Toggled Disabled"
							LabelPosition="Default">
							<AppBarToggleButton.Content>
								<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
							</AppBarToggleButton.Content>
						</AppBarToggleButton>
					</StackPanel>

				</StackPanel>
			</controls:SamplePanel.MainContent>
			<controls:SamplePanel.SideContent>
				<StackPanel Spacing="12">

					<ToggleSwitch
						x:Name="TestToggleSwitch"
						AutomationProperties.Name="TestToggleSwitch1"
						Header="Toggle all ToggleButtons:" />

					<ToggleSwitch
						x:Name="EnabledToggle"
						Header="IsEnabled:"
						IsOn="False"
						OffContent="Disabled"
						OnContent="Enabled (Default)" />

				</StackPanel>
			</controls:SamplePanel.SideContent>
		</controls:SamplePanel>

		<!--  ToggleBehaviour Off  -->
		<controls:SamplePanel Header="ToggleBehaviour Off">
			<controls:SamplePanel.MainContent>
				<StackPanel Spacing="12">

					<TextBlock Text="In ToggleButtons:" />

					<StackPanel Orientation="Horizontal" Spacing="16">
						<ToggleButton
							Padding="8"
							AutomationProperties.Name="TestToggle1-Off"
							IsChecked="{x:Bind OffTestToggleSwitch.IsOn, Mode=OneWay}">
							<controls:ThemedIcon
								IconType="Layered"
								Style="{StaticResource IconTest}"
								ToggleBehavior="Off" />
						</ToggleButton>
						<ToggleButton
							Padding="8"
							AutomationProperties.Name="TestToggle2-Off"
							IsChecked="{x:Bind OffTestToggleSwitch.IsOn, Mode=OneWay}">
							<controls:ThemedIcon
								IsFilled="True"
								Style="{StaticResource IconTest}"
								ToggleBehavior="Off" />
						</ToggleButton>
						<ToggleButton
							Padding="8"
							AutomationProperties.Name="TestToggle3-Off"
							IsChecked="{x:Bind OffTestToggleSwitch.IsOn, Mode=OneWay}">
							<controls:ThemedIcon
								IconType="Outline"
								Style="{StaticResource IconTest}"
								ToggleBehavior="Off" />
						</ToggleButton>
						<ToggleButton
							Padding="8"
							AutomationProperties.Name="TestToggle4-Off"
							IsChecked="{x:Bind OffTestToggleSwitch.IsOn, Mode=OneWay}"
							IsEnabled="False">
							<controls:ThemedIcon
								IconType="Outline"
								Style="{StaticResource IconTest}"
								ToggleBehavior="Off" />
						</ToggleButton>
					</StackPanel>

					<TextBlock Text="In AppBarToggleButtons:" />

					<StackPanel Orientation="Horizontal" Spacing="16">
						<AppBarButton
							AutomationProperties.Name="TestAppBarToggle2-1"
							HighContrastAdjustment="None"
							Label="Layered"
							LabelPosition="Default">
							<AppBarButton.Content>
								<controls:ThemedIcon
									IconType="Layered"
									Style="{StaticResource IconTest}"
									ToggleBehavior="Off" />
							</AppBarButton.Content>
						</AppBarButton>

						<AppBarToggleButton
							AutomationProperties.Name="TestAppBarToggle2-2"
							HighContrastAdjustment="None"
							IsChecked="True"
							Label="Layered Toggle"
							LabelPosition="Default">
							<AppBarToggleButton.Content>
								<controls:ThemedIcon
									IconType="Layered"
									Style="{StaticResource IconTest}"
									ToggleBehavior="Off" />
							</AppBarToggleButton.Content>
						</AppBarToggleButton>

						<AppBarButton
							AutomationProperties.Name="TestAppBarToggle2-3"
							HighContrastAdjustment="None"
							IsEnabled="{x:Bind OffEnabledToggle.IsOn, Mode=TwoWay}"
							Label="Disabled"
							LabelPosition="Default">
							<AppBarButton.Content>
								<controls:ThemedIcon
									IconType="Layered"
									Style="{StaticResource IconTest}"
									ToggleBehavior="Off" />
							</AppBarButton.Content>
						</AppBarButton>

						<AppBarToggleButton
							AutomationProperties.Name="TestAppBarToggle2-4"
							HighContrastAdjustment="None"
							IsChecked="True"
							IsEnabled="{x:Bind OffEnabledToggle.IsOn, Mode=TwoWay}"
							Label="Layered Toggled Disabled"
							LabelPosition="Default">
							<AppBarToggleButton.Content>
								<controls:ThemedIcon
									IconType="Layered"
									Style="{StaticResource IconTest}"
									ToggleBehavior="Off" />
							</AppBarToggleButton.Content>
						</AppBarToggleButton>
					</StackPanel>

					<StackPanel
						Grid.Row="2"
						Grid.Column="1"
						Orientation="Horizontal"
						Spacing="16">
						<AppBarButton
							AutomationProperties.Name="TestAppBarToggle3-1"
							HighContrastAdjustment="None"
							Label="Outline"
							LabelPosition="Default">
							<AppBarButton.Content>
								<controls:ThemedIcon
									IconType="Outline"
									Style="{StaticResource IconTest}"
									ToggleBehavior="Off" />
							</AppBarButton.Content>
						</AppBarButton>

						<AppBarToggleButton
							AutomationProperties.Name="TestAppBarToggle3-2"
							HighContrastAdjustment="None"
							IsChecked="True"
							Label="Outline Toggle"
							LabelPosition="Default">
							<AppBarToggleButton.Content>
								<controls:ThemedIcon
									IconType="Outline"
									Style="{StaticResource IconTest}"
									ToggleBehavior="Off" />
							</AppBarToggleButton.Content>
						</AppBarToggleButton>

						<AppBarButton
							AutomationProperties.Name="TestAppBarToggle3-3"
							HighContrastAdjustment="None"
							IsEnabled="{x:Bind OffEnabledToggle.IsOn, Mode=TwoWay}"
							Label="Outline Disabled"
							LabelPosition="Default">
							<AppBarButton.Content>
								<controls:ThemedIcon
									IconType="Outline"
									Style="{StaticResource IconTest}"
									ToggleBehavior="Off" />
							</AppBarButton.Content>
						</AppBarButton>

						<AppBarToggleButton
							AutomationProperties.Name="TestAppBarToggle3-4"
							HighContrastAdjustment="None"
							IsChecked="True"
							IsEnabled="{x:Bind OffEnabledToggle.IsOn, Mode=TwoWay}"
							Label="Outline Toggled Disabled"
							LabelPosition="Default">
							<AppBarToggleButton.Content>
								<controls:ThemedIcon
									IconType="Outline"
									Style="{StaticResource IconTest}"
									ToggleBehavior="Off" />
							</AppBarToggleButton.Content>
						</AppBarToggleButton>
					</StackPanel>

				</StackPanel>
			</controls:SamplePanel.MainContent>
			<controls:SamplePanel.SideContent>
				<StackPanel Spacing="12">

					<ToggleSwitch
						x:Name="OffTestToggleSwitch"
						AutomationProperties.Name="OffTestToggleSwitch1"
						Header="Toggle all ToggleButtons:" />

					<ToggleSwitch
						x:Name="OffEnabledToggle"
						Header="IsEnabled:"
						IsOn="False"
						OffContent="Disabled"
						OnContent="Enabled (Default)" />

				</StackPanel>
			</controls:SamplePanel.SideContent>
		</controls:SamplePanel>

		<!--  Resizing  -->
		<controls:SamplePanel Header="">
			<controls:SamplePanel.MainContent>
				<Grid ColumnSpacing="24" RowSpacing="24">

					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="90" />
						<ColumnDefinition Width="90" />
						<ColumnDefinition Width="90" />
					</Grid.ColumnDefinitions>

					<!--  Row 0  -->
					<controls:ThemedIcon
						Grid.Row="0"
						Grid.Column="0"
						Width="{x:Bind TestSize.Value, Mode=TwoWay}"
						Height="{x:Bind TestSize.Value, Mode=TwoWay}"
						IconType="Layered"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="0"
						Grid.Column="1"
						Width="{x:Bind TestSize.Value, Mode=TwoWay}"
						Height="{x:Bind TestSize.Value, Mode=TwoWay}"
						IsFilled="True"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="0"
						Grid.Column="2"
						Width="{x:Bind TestSize.Value, Mode=TwoWay}"
						Height="{x:Bind TestSize.Value, Mode=TwoWay}"
						IconType="Outline"
						Style="{StaticResource IconTest}" />

					<!--  Row 1  -->
					<controls:ThemedIcon
						Grid.Row="1"
						Grid.Column="0"
						Width="{x:Bind TestSize.Value, Mode=TwoWay}"
						Height="{x:Bind TestSize.Value, Mode=TwoWay}"
						IsEnabled="False"
						Style="{StaticResource IconTest}" />

					<controls:ThemedIcon
						Grid.Row="1"
						Grid.Column="1"
						Width="{x:Bind TestSize.Value, Mode=TwoWay}"
						Height="{x:Bind TestSize.Value, Mode=TwoWay}"
						Foreground="Yellow"
						IconColorType="Custom"
						IconType="Layered"
						Style="{StaticResource IconTest}">
						<controls:ThemedIcon.Color>
							<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
								<GradientStop Offset="0.0" Color="Cyan" />
								<GradientStop Offset="1.0" Color="DeepPink" />
							</LinearGradientBrush>
						</controls:ThemedIcon.Color>
					</controls:ThemedIcon>

				</Grid>
			</controls:SamplePanel.MainContent>
			<controls:SamplePanel.SideContent>
				<StackPanel>

					<NumberBox
						x:Name="TestSize"
						Width="240"
						HorizontalAlignment="Left"
						Header="Icon size:"
						Maximum="84"
						Minimum="16"
						SpinButtonPlacementMode="Inline"
						Value="40" />

				</StackPanel>
			</controls:SamplePanel.SideContent>
		</controls:SamplePanel>

	</StackPanel>
</Page>
