<UserControl
	x:Class="Files.App.UITests.UserControls.ThemedIconsUC"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:Files.App.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:helpers="using:Files.App.Controls.Helpers"
	xmlns:local="using:Files.App.UITests.UserControls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<UserControl.Resources>
		<helpers:BoolToIconTypeLayeredConverter x:Key="BoolToLayeredConverter" />
		<helpers:BoolToIconTypeOutlineConverter x:Key="BoolToOutlineConverter" />
	</UserControl.Resources>

	<Grid x:Name="RootGrid" Background="{ThemeResource LayerOnMicaBaseAltFillColorDefault}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid.Resources>
			<Style
				x:Key="IconTest"
				BasedOn="{StaticResource App.ThemedIcons.OpenInTerminal}"
				TargetType="controls:ThemedIcon" />
		</Grid.Resources>

		<ScrollViewer Grid.Row="1">
			<Grid Padding="24,12,24,24" RowSpacing="12">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<!--  Main View  -->
				<Grid Grid.Row="2" ColumnSpacing="100">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<!--  Single  -->
					<StackPanel Grid.Column="0" Spacing="12">

						<TextBlock><Run FontWeight="Medium">Normal</Run>
							<Run FontSize="12">(Layered, Filled, Outline)</Run></TextBlock>

						<StackPanel Orientation="Horizontal" Spacing="16">
							<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
							<controls:ThemedIcon IconType="Filled" Style="{StaticResource IconTest}" />
							<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
						</StackPanel>

						<TextBlock><Run FontWeight="Medium">Disabled</Run>
							<Run FontSize="12">(Layered, Filled, Outline)</Run></TextBlock>

						<StackPanel Orientation="Horizontal" Spacing="16">
							<controls:ThemedIcon
								IconType="Layered"
								IsEnabled="False"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconType="Filled"
								IsEnabled="False"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconType="Outline"
								IsEnabled="False"
								Style="{StaticResource IconTest}" />
						</StackPanel>

						<TextBlock><Run FontWeight="Medium">Success</Run>
							<Run FontSize="12">(Layered, Filled, Outline)</Run></TextBlock>

						<StackPanel Orientation="Horizontal" Spacing="16">
							<controls:ThemedIcon
								IconColorType="Success"
								IconType="Layered"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconColorType="Success"
								IconType="Filled"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconColorType="Success"
								IconType="Outline"
								Style="{StaticResource IconTest}" />
						</StackPanel>

						<TextBlock><Run FontWeight="Medium">Caution</Run>
							<Run FontSize="12">(Layered, Filled, Outline)</Run></TextBlock>

						<StackPanel Orientation="Horizontal" Spacing="16">
							<controls:ThemedIcon
								IconColorType="Caution"
								IconType="Layered"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconColorType="Caution"
								IconType="Filled"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconColorType="Caution"
								IconType="Outline"
								Style="{StaticResource IconTest}" />
						</StackPanel>

						<TextBlock><Run FontWeight="Medium">Critical</Run>
							<Run FontSize="12">(Layered, Filled, Outline)</Run></TextBlock>

						<StackPanel Orientation="Horizontal" Spacing="16">
							<controls:ThemedIcon
								IconColorType="Critical"
								IconType="Layered"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconColorType="Critical"
								IconType="Filled"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconColorType="Critical"
								IconType="Outline"
								Style="{StaticResource IconTest}" />
						</StackPanel>

						<TextBlock><Run FontWeight="Medium">Accent</Run>
							<Run FontSize="12">(Layered, Filled, Outline)</Run></TextBlock>

						<StackPanel
							Margin="0,0,0,32"
							Orientation="Horizontal"
							Spacing="16">
							<controls:ThemedIcon
								IconColorType="Accent"
								IconType="Layered"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconColorType="Accent"
								IconType="Filled"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconColorType="Accent"
								IconType="Outline"
								Style="{StaticResource IconTest}" />
						</StackPanel>

						<TextBlock><Run FontWeight="Medium">Toggle</Run>
							<Run FontSize="12">(Layered, Filled, Outline)</Run></TextBlock>

						<StackPanel
							Padding="8"
							HorizontalAlignment="Left"
							Background="{ThemeResource AccentFillColorDefaultBrush}"
							CornerRadius="{ThemeResource OverlayCornerRadius}"
							Orientation="Horizontal"
							Spacing="16">
							<controls:ThemedIcon
								IconType="Layered"
								IsToggled="True"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconType="Filled"
								IsToggled="True"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconType="Outline"
								IsToggled="True"
								Style="{StaticResource IconTest}" />
						</StackPanel>

						<TextBlock><Run FontWeight="Medium">Toggle + Disabled</Run>
							<Run FontSize="12">(Layered, Filled, Outline)</Run></TextBlock>

						<StackPanel
							Margin="0,0,0,32"
							Padding="8"
							HorizontalAlignment="Left"
							Background="{ThemeResource AccentFillColorDisabledBrush}"
							CornerRadius="{ThemeResource OverlayCornerRadius}"
							Orientation="Horizontal"
							Spacing="16">
							<controls:ThemedIcon
								IconType="Layered"
								IsEnabled="False"
								IsToggled="True"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconType="Filled"
								IsEnabled="False"
								IsToggled="True"
								Style="{StaticResource IconTest}" />
							<controls:ThemedIcon
								IconType="Outline"
								IsEnabled="False"
								IsToggled="True"
								Style="{StaticResource IconTest}" />
						</StackPanel>
					</StackPanel>

					<!--  On a Control  -->
					<StackPanel
						Grid.Column="1"
						Margin="0,0,0,32"
						Spacing="12">

						<TextBlock><Run FontWeight="Medium">On ToggleButton</Run>
							<Run FontSize="12">(Layered, Filled, Outline, Disabled)</Run></TextBlock>

						<StackPanel Orientation="Horizontal" Spacing="16">
							<ToggleButton
								Padding="8"
								AutomationProperties.Name="TestToggle1"
								IsChecked="{x:Bind TestToggleSwitch.IsOn, Mode=OneWay}">
								<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
							</ToggleButton>
							<ToggleButton
								Padding="8"
								AutomationProperties.Name="TestToggle2"
								IsChecked="{x:Bind TestToggleSwitch.IsOn, Mode=OneWay}">
								<controls:ThemedIcon IconType="Filled" Style="{StaticResource IconTest}" />
							</ToggleButton>
							<ToggleButton
								Padding="8"
								AutomationProperties.Name="TestToggle3"
								IsChecked="{x:Bind TestToggleSwitch.IsOn, Mode=OneWay}">
								<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
							</ToggleButton>
							<ToggleButton
								Padding="8"
								AutomationProperties.Name="TestToggle4"
								IsChecked="{x:Bind TestToggleSwitch.IsOn, Mode=OneWay}"
								IsEnabled="False">
								<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
							</ToggleButton>
							<ToggleSwitch x:Name="TestToggleSwitch" AutomationProperties.Name="TestToggleSwitch1" />
						</StackPanel>

						<TextBlock><Run FontWeight="Medium">On AppBarButton</Run>
							<Run FontSize="12">(Layered, Filled/Toggled, Outline)</Run></TextBlock>

						<StackPanel
							Margin="0,0,0,32"
							Orientation="Vertical"
							Spacing="16">

							<StackPanel Orientation="Horizontal" Spacing="16">
								<AppBarButton Label="Layered" LabelPosition="Default">
									<AppBarButton.Content>
										<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
									</AppBarButton.Content>
								</AppBarButton>

								<AppBarToggleButton
									IsChecked="True"
									Label="Layered Toggle"
									LabelPosition="Default">
									<AppBarToggleButton.Content>
										<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
									</AppBarToggleButton.Content>
								</AppBarToggleButton>

								<AppBarButton
									x:Name="AppBarButtonDisable"
									IsEnabled="False"
									Label="Disabled"
									LabelPosition="Default">
									<AppBarButton.Content>
										<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
									</AppBarButton.Content>
								</AppBarButton>

								<AppBarToggleButton
									IsChecked="True"
									IsEnabled="False"
									Label="Layered Toggled Disabled"
									LabelPosition="Default">
									<AppBarToggleButton.Content>
										<controls:ThemedIcon IconType="Layered" Style="{StaticResource IconTest}" />
									</AppBarToggleButton.Content>
								</AppBarToggleButton>
							</StackPanel>

							<StackPanel Orientation="Horizontal" Spacing="16">
								<AppBarButton Label="Outline" LabelPosition="Default">
									<AppBarButton.Content>
										<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
									</AppBarButton.Content>
								</AppBarButton>

								<AppBarToggleButton
									IsChecked="True"
									Label="Outline Toggle"
									LabelPosition="Default">
									<AppBarToggleButton.Content>
										<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
									</AppBarToggleButton.Content>
								</AppBarToggleButton>

								<AppBarButton
									x:Name="AppBarButtonDisable2"
									IsEnabled="False"
									Label="Outline Disabled"
									LabelPosition="Default">
									<AppBarButton.Content>
										<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
									</AppBarButton.Content>
								</AppBarButton>

								<AppBarToggleButton
									IsChecked="True"
									IsEnabled="False"
									Label="Outline Toggled Disabled"
									LabelPosition="Default">
									<AppBarToggleButton.Content>
										<controls:ThemedIcon IconType="Outline" Style="{StaticResource IconTest}" />
									</AppBarToggleButton.Content>
								</AppBarToggleButton>
							</StackPanel>

							<Button
								x:Name="ButtonTestEnabledStates"
								Click="ButtonTestEnabledStates_Click"
								Content="Check Enabled State" />

						</StackPanel>

						<TextBlock><Run FontWeight="Medium">Bool Converter</Run>
							<Run FontSize="12">(Outline to Filled/Layered to Filled)</Run></TextBlock>

						<StackPanel Orientation="Horizontal" Spacing="16">
							<controls:ThemedIcon IconType="{x:Bind ConverterToggle.IsOn, Converter={StaticResource BoolToOutlineConverter}, Mode=TwoWay}" Style="{StaticResource IconTest}" />

							<controls:ThemedIcon IconType="{x:Bind ConverterToggle.IsOn, Converter={StaticResource BoolToLayeredConverter}, Mode=TwoWay}" Style="{StaticResource IconTest}" />
						</StackPanel>

						<TextBlock><Run FontWeight="Medium">Bool Converter Inverted</Run>
							<Run FontSize="12">(Outline to Filled/Layered to Filled)</Run></TextBlock>

						<StackPanel Orientation="Horizontal" Spacing="16">
							<controls:ThemedIcon IconType="{x:Bind ConverterToggle.IsOn, Converter={StaticResource BoolToOutlineConverter}, ConverterParameter=Invert, Mode=TwoWay}" Style="{StaticResource IconTest}" />

							<controls:ThemedIcon IconType="{x:Bind ConverterToggle.IsOn, Converter={StaticResource BoolToLayeredConverter}, ConverterParameter=Invert, Mode=TwoWay}" Style="{StaticResource IconTest}" />
						</StackPanel>

						<ToggleSwitch x:Name="ConverterToggle" IsOn="True" />

					</StackPanel>

				</Grid>

			</Grid>
		</ScrollViewer>

	</Grid>
</UserControl>