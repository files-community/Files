<UserControl
	x:Class="Files.App.UITests.UserControls.ToolbarUC"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:controls="using:Files.App.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Files.App.UITests.UserControls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>

		<StackPanel
			Padding="24,24,24,24"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Orientation="Vertical"
			Spacing="16">

			<TextBlock Text="CommandBar" />

			<CommandBar
				Margin="0,0,0,32"
				DefaultLabelPosition="Collapsed"
				IsOpen="False">
				<AppBarButton Icon="Add" Label="Add" />
				<AppBarSeparator />
				<AppBarButton Icon="Edit" Label="Edit" />
				<AppBarButton Icon="Share" Label="Share" />
				<CommandBar.SecondaryCommands>
					<AppBarButton Icon="Setting" Label="Settings">
						<AppBarButton.KeyboardAccelerators>
							<KeyboardAccelerator Key="I" Modifiers="Control" />
						</AppBarButton.KeyboardAccelerators>
					</AppBarButton>
				</CommandBar.SecondaryCommands>
			</CommandBar>

			<TextBlock Text="Toolbar" />

			<controls:Toolbar
				x:Name="testToolbar"
				HorizontalAlignment="Stretch"
				ItemsSource=""
				ToolbarSize="Medium" />

			<StackPanel Orientation="Horizontal" Spacing="16">

				<TextBox
					Width="240"
					Header="Height"
					IsReadOnly="True"
					Text="{x:Bind testToolbar.ActualHeight.ToString(), Mode=OneWay}" />
				<TextBox
					Width="240"
					Header="Width"
					IsReadOnly="True"
					Text="{x:Bind testToolbar.ActualWidth.ToString(), Mode=OneWay}" />

			</StackPanel>

			<TextBlock Text="ToolbarButton" />

			<StackPanel
				Margin="0,0,0,16"
				Orientation="Horizontal"
				Spacing="16">
				<controls:ToolbarButton
					MinWidth="40"
					MinHeight="32"
					Label="Button text"
					ThemedIcon="{StaticResource App.ThemedIcons.RunAs.Elevated}" />

				<controls:ToolbarButton
					MinWidth="40"
					MinHeight="32"
					IsEnabled="False"
					Label="Button text"
					ThemedIcon="{StaticResource App.ThemedIcons.RunAs.Elevated}" />

				<controls:ToolbarButton
					MinWidth="40"
					MinHeight="32"
					Label="Button text">
					<controls:ToolbarButton.Content>
						<AnimatedIcon Width="16" Height="16">
							<AnimatedIcon.Source>
								<animatedvisuals:AnimatedSettingsVisualSource />
							</AnimatedIcon.Source>
							<AnimatedIcon.FallbackIconSource>
								<SymbolIconSource Symbol="Find" />
							</AnimatedIcon.FallbackIconSource>
						</AnimatedIcon>
					</controls:ToolbarButton.Content>
				</controls:ToolbarButton>
			</StackPanel>


			<TextBlock Text="ToolbarToggleButton" />
			<StackPanel
				Margin="0,0,0,16"
				Orientation="Horizontal"
				Spacing="16">
				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					Label="Button text"
					ThemedIcon="{StaticResource App.ThemedIcons.New.Folder}" />

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IsEnabled="False"
					Label="Button text"
					ThemedIcon="{StaticResource App.ThemedIcons.New.Folder}" />

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IsChecked="True"
					Label="Button text"
					ThemedIcon="{StaticResource App.ThemedIcons.New.Folder}" />

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IsChecked="True"
					IsEnabled="False"
					Label="Button text"
					ThemedIcon="{StaticResource App.ThemedIcons.New.Folder}" />

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					Label="Button text">
					<controls:ToolbarToggleButton.Content>
						<AnimatedIcon Width="16" Height="16">
							<AnimatedIcon.Source>
								<animatedvisuals:AnimatedSettingsVisualSource />
							</AnimatedIcon.Source>
							<AnimatedIcon.FallbackIconSource>
								<SymbolIconSource Symbol="Find" />
							</AnimatedIcon.FallbackIconSource>
						</AnimatedIcon>
					</controls:ToolbarToggleButton.Content>
				</controls:ToolbarToggleButton>

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IsChecked="True"
					Label="Button text">
					<controls:ToolbarToggleButton.Content>
						<AnimatedIcon Width="16" Height="16">
							<AnimatedIcon.Source>
								<animatedvisuals:AnimatedSettingsVisualSource />
							</AnimatedIcon.Source>
							<AnimatedIcon.FallbackIconSource>
								<SymbolIconSource Symbol="Find" />
							</AnimatedIcon.FallbackIconSource>
						</AnimatedIcon>
					</controls:ToolbarToggleButton.Content>
				</controls:ToolbarToggleButton>
			</StackPanel>
		</StackPanel>

	</Grid>
</UserControl>
