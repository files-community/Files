<UserControl
	x:Class="Files.App.UITests.UserControls.ToolbarUC"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:controls="using:Files.App.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Files.App.UITests.UserControls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Loaded="UserControl_Loaded"
	mc:Ignorable="d">

	<Grid>

		<StackPanel
			Padding="24,24,24,24"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Orientation="Vertical"
			Spacing="16">

			<TextBlock Text="CommandBar" />

			<CommandBar
				Margin="0,0,0,32"
				DefaultLabelPosition="Collapsed"
				IsOpen="False">
				<AppBarButton Icon="Add" Label="Add" />
				<AppBarSeparator />
				<AppBarButton Icon="Edit" Label="Edit" />
				<AppBarButton Icon="Share" Label="Share" />
				<CommandBar.SecondaryCommands>
					<AppBarButton Icon="Setting" Label="Settings">
						<AppBarButton.KeyboardAccelerators>
							<KeyboardAccelerator Key="I" Modifiers="Control" />
						</AppBarButton.KeyboardAccelerators>
					</AppBarButton>
				</CommandBar.SecondaryCommands>
			</CommandBar>

			<TextBlock Text="Toolbar" />

			<controls:Toolbar
				x:Name="testToolbar"
				HorizontalAlignment="Stretch"
				ToolbarSize="Medium">

				<controls:Toolbar.Items>
					<controls:ToolbarItem
						x:Name="testXamlItem001"
						IconSize="16"
						Label="Xaml Label 1"
						ThemedIcon="{StaticResource App.ThemedIcons.Cut}" />
					<controls:ToolbarItem
						x:Name="testXamlItem002"
						IconSize="16"
						Label="Xaml Label 2"
						ThemedIcon="{StaticResource App.ThemedIcons.Copy}">
						<controls:ToolbarItem.SubItems>
							<controls:ToolbarItem
								x:Name="testXamlItem002a"
								IconSize="16"
								Label="Xaml Label 2a"
								ThemedIcon="{StaticResource App.ThemedIcons.TagEdit}" />
						</controls:ToolbarItem.SubItems>
					</controls:ToolbarItem>
					<controls:ToolbarItem
						x:Name="testXamlItem003"
						IconSize="16"
						Label="Xaml Label 3"
						ThemedIcon="{StaticResource App.ThemedIcons.PanelLeft}" />
				</controls:Toolbar.Items>

				<controls:Toolbar.ItemTemplate>
					<DataTemplate x:DataType="controls:ToolbarItem">
						<StackPanel
							Padding="2"
							BorderBrush="#80FFFFFF"
							BorderThickness="1"
							Orientation="Vertical">
							<TextBlock
								FontSize="12"
								Foreground="Black"
								Text="{x:Bind Label}" />
							<controls:ThemedIcon
								Width="{x:Bind IconSize}"
								Height="{x:Bind IconSize}"
								IconSize="{x:Bind IconSize}"
								Style="{x:Bind ThemedIcon}" />
						</StackPanel>
					</DataTemplate>
				</controls:Toolbar.ItemTemplate>
			</controls:Toolbar>



			<StackPanel Orientation="Horizontal" Spacing="16">

				<TextBox
					Width="240"
					Header="Height"
					IsReadOnly="True"
					Text="{x:Bind testToolbar.ActualHeight.ToString(), Mode=OneWay}" />
				<TextBox
					Width="240"
					Header="Width"
					IsReadOnly="True"
					Text="{x:Bind testToolbar.ActualWidth.ToString(), Mode=OneWay}" />

			</StackPanel>

			<TextBlock Text="ToolbarButton" />

			<StackPanel
				Margin="0,0,0,16"
				Orientation="Horizontal"
				Spacing="16">
				<controls:ToolbarButton
					MinWidth="40"
					MinHeight="32"
					IconSize="16"
					Label="Button text 001"
					ThemedIcon="{StaticResource App.ThemedIcons.RunAs.Elevated}" />

				<controls:ToolbarButton
					MinWidth="40"
					MinHeight="32"
					IconSize="16"
					IsEnabled="False"
					Label="Button text 002"
					ThemedIcon="{StaticResource App.ThemedIcons.RunAs.Elevated}" />

				<controls:ToolbarButton
					MinWidth="40"
					MinHeight="32"
					IconSize="16"
					Label="Button text 003">
					<controls:ToolbarButton.Content>
						<AnimatedIcon Width="16" Height="16">
							<AnimatedIcon.Source>
								<animatedvisuals:AnimatedSettingsVisualSource />
							</AnimatedIcon.Source>
							<AnimatedIcon.FallbackIconSource>
								<SymbolIconSource Symbol="Find" />
							</AnimatedIcon.FallbackIconSource>
						</AnimatedIcon>
					</controls:ToolbarButton.Content>
				</controls:ToolbarButton>

				<controls:ToolbarItem IconSize="16" Label="Test Label Xaml" />

			</StackPanel>


			<TextBlock Text="ToolbarToggleButton" />
			<StackPanel
				Margin="0,0,0,16"
				Orientation="Horizontal"
				Spacing="16">
				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IconSize="16"
					Label="Button text 1"
					ThemedIcon="{StaticResource App.ThemedIcons.New.Folder}" />

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IconSize="16"
					IsEnabled="False"
					Label="Button text 2"
					ThemedIcon="{StaticResource App.ThemedIcons.New.Folder}" />

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IconSize="16"
					IsChecked="True"
					Label="Button text 3"
					ThemedIcon="{StaticResource App.ThemedIcons.New.Folder}" />

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IconSize="16"
					IsChecked="True"
					IsEnabled="False"
					Label="Button text 4"
					ThemedIcon="{StaticResource App.ThemedIcons.New.Folder}" />

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IconSize="16"
					Label="Button text 5">
					<controls:ToolbarToggleButton.Content>
						<AnimatedIcon Width="16" Height="16">
							<AnimatedIcon.Source>
								<animatedvisuals:AnimatedSettingsVisualSource />
							</AnimatedIcon.Source>
							<AnimatedIcon.FallbackIconSource>
								<SymbolIconSource Symbol="Find" />
							</AnimatedIcon.FallbackIconSource>
						</AnimatedIcon>
					</controls:ToolbarToggleButton.Content>
				</controls:ToolbarToggleButton>

				<controls:ToolbarToggleButton
					Width="40"
					Height="32"
					IconSize="16"
					IsChecked="True"
					Label="Button text 6">
					<controls:ToolbarToggleButton.Content>
						<AnimatedIcon Width="16" Height="16">
							<AnimatedIcon.Source>
								<animatedvisuals:AnimatedSettingsVisualSource />
							</AnimatedIcon.Source>
							<AnimatedIcon.FallbackIconSource>
								<SymbolIconSource Symbol="Find" />
							</AnimatedIcon.FallbackIconSource>
						</AnimatedIcon>
					</controls:ToolbarToggleButton.Content>
				</controls:ToolbarToggleButton>
			</StackPanel>
		</StackPanel>

	</Grid>
</UserControl>
